<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="295dp"
        android:layout_height="81dp"
        android:layout_marginTop="48dp"
        android:text="@string/titulo"
        android:textColor="#F44336"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/grupito"
        android:layout_width="169dp"
        android:layout_height="409dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintVertical_bias="0.598">

        <RadioButton
            android:id="@+id/primerRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Equipo1"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="360dp" />

        <RadioButton

            android:id="@+id/segundoRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Equipo2"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="428dp" />

        <RadioButton
            android:id="@+id/tercerRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Equipo3"
            tools:layout_editor_absoluteX="54dp"
            tools:layout_editor_absoluteY="497dp" />

        <RadioButton
            android:id="@+id/cuartoRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Equipo4" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="152dp"
        android:text="@string/Me_gusta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cambio"
        android:layout_width="347dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

</androidx.constraintlayout.widget.ConstraintLayout>